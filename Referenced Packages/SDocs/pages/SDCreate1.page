                            </apex:inputCheckbox>
                            <apex:outputPanel rendered="{!ca.t.SDOC__Task_Auto_Create_Default__c=='Checked2'}">
                            	<img src='/img/func_icons/util/lock12.gif'/>
                            </apex:outputPanel>
                        </apex:column>
                        <apex:column headerValue="Name"><apex:outputText value="{!ca.t.SDOC__Format_Icon__c}" escape="false"/>
